<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BmiActivity">
    <!--TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolBarBmi"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/toolbar"
        android:background="@color/white"
        app:titleTextColor="@color/black"
        app:title="BMI Calculator"
        />
    <!--Text Input (Weight)-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolBarBmi"
        android:layout_margin="20dp"
        app:boxStrokeColor="#8D4AEA"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:textColorHint="#c3c3c3"
        >
        <androidx.appcompat.widget.AppCompatEditText

            android:id="@+id/weightIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WEIGHT (in kgs)"
            android:textSize="17sp"
            android:inputType="numberDecimal"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <!--Text Input (Height)-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etWeight"
        android:layout_margin="20dp"
        app:boxStrokeColor="#8D4AEA"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:textColorHint="#c3c3c3"
        >
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/heightIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HEIGHT (in cm)"
            android:textSize="17sp"
            android:inputType="numberDecimal"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <!--BMI Text Display-->
    <LinearLayout
        android:id="@+id/dispVAl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etHeight"
        android:layout_margin="60dp"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etHeight"
            android:text="Your BMI "
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#747373"
            />
        <TextView
            android:id="@+id/bmiVal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etHeight"
            android:text="18.6"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#747373"
            />
        <TextView
            android:id="@+id/bmiStats"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etHeight"
            android:text="You are underweight"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#747373"
            />

    </LinearLayout>
    <!--Cal Btn-->
    <Button
        android:id="@+id/calculateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@+id/etHeight"
        android:text="CALCULATE"
        android:textSize="26sp"
        android:layout_marginHorizontal="40dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>